@model FitnessTracker.Models.DashboardViewModel

<div class="container py-4">
    <h1 class="mb-4">Dashboard</h1>
    
    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Today's Calories</h5>
                    <h2 class="card-text">@Model.DailyStats.CaloriesConsumed</h2>
                    <p class="mb-0">Goal: @Model.DailyStats.CaloriesGoal</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Workouts This Week</h5>
                    <h2 class="card-text">@Model.DailyStats.WorkoutsThisWeek</h2>
                    <p class="mb-0">Goal: @Model.DailyStats.WorkoutsGoal</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Water Intake</h5>
                    <h2 class="card-text">@Model.DailyStats.WaterIntake.ToString("0.0")L</h2>
                    <p class="mb-0">Goal: @Model.DailyStats.WaterGoal.ToString("0.0")L</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title">Steps Today</h5>
                    <h2 class="card-text">@Model.DailyStats.StepsToday.ToString("N0")</h2>
                    <p class="mb-0">Goal: @Model.DailyStats.StepsGoal.ToString("N0")</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Recent Workouts</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        @foreach (var workout in Model.RecentWorkouts)
                        {
                            <a asp-controller="Workouts" asp-action="Details" asp-route-id="@workout.Id" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@workout.Type</h6>
                                    <small>@workout.Date.ToShortDateString()</small>
                                </div>
                                <p class="mb-1">@workout.Duration minutes 
                                    @* Â· @workout.CaloriesBurned calories *@
                                    </p>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Nutrition Summary</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Protein</label>
                        <div class="progress">
                            <div class="progress-bar bg-success" style="width: @(Model.NutritionSummary.ProteinGrams * 100 / Model.NutritionSummary.ProteinGoal)%">
                                @Model.NutritionSummary.ProteinGrams / @Model.NutritionSummary.ProteinGoal g
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Carbs</label>
                        <div class="progress">
                            <div class="progress-bar bg-info" style="width: @(Model.NutritionSummary.CarbsGrams * 100 / Model.NutritionSummary.CarbsGoal)%">
                                @Model.NutritionSummary.CarbsGrams / @Model.NutritionSummary.CarbsGoal g
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Fats</label>
                        <div class="progress">
                            <div class="progress-bar bg-warning" style="width: @(Model.NutritionSummary.FatGrams * 100 / Model.NutritionSummary.FatGoal)%">
                                @Model.NutritionSummary.FatGrams / @Model.NutritionSummary.FatGoal g
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>