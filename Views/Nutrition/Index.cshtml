@model FitnessTracker.Controllers.NutritionViewModel

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Nutrition Tracker</h1>
        <a asp-controller="Nutrition" asp-action="LogMeal" class="btn btn-primary">
            Log Meal
        </a>
    </div>

    <!-- Daily Summary -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Today's Summary</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Calories</label>
                        <div class="progress">
                            <div class="progress-bar bg-primary" style="width: @(Model.Summary.TotalCalories * 100 / Math.Max(1, Model.Summary.CalorieGoal))%">
                                @Model.Summary.TotalCalories/@Model.Summary.CalorieGoal cal
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Protein</label>
                        <div class="progress">
                            <div class="progress-bar bg-success" style="width: @(Model.Summary.ProteinGrams * 100 / Math.Max(1, Model.Summary.ProteinGoal))%">
                                @Model.Summary.ProteinGrams/@Model.Summary.ProteinGoal g
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Carbs</label>
                        <div class="progress">
                            <div class="progress-bar bg-info" style="width: @(Model.Summary.CarbsGrams * 100 / Math.Max(1, Model.Summary.CarbsGoal))%">
                                @Model.Summary.CarbsGrams/@Model.Summary.CarbsGoal g
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Fat</label>
                        <div class="progress">
                            <div class="progress-bar bg-warning" style="width: @(Model.Summary.FatGrams * 100 / Math.Max(1, Model.Summary.FatGoal))%">
                                @Model.Summary.FatGrams/@Model.Summary.FatGoal g
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Water Intake</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <h2>@Model.Summary.WaterIntake.ToString("0.0") / @Model.Summary.WaterGoal.ToString("0.0") L</h2>
                        <div class="progress">
                            <div class="progress-bar bg-info" style="width: @(Model.Summary.WaterIntake > 0 ? Model.Summary.WaterIntake * 100 / Model.Summary.WaterGoal : 0)%"></div>
                        </div>
                    </div>
                    <form asp-action="LogWater" method="post">
                        <div class="input-group">
                            <input type="number" name="Amount" class="form-control" placeholder="Amount (L)" step="0.1" min="0.1" max="2">
                            <button class="btn btn-outline-primary" type="submit">Add Water</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Meal Log -->
    <h2 class="mb-3">Today's Meals</h2>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>Time</th>
                    <th>Meal</th>
                    <th>Calories</th>
                    <th>Protein</th>
                    <th>Carbs</th>
                    <th>Fat</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var meal in Model.Meals)
                {
                    <tr>
                        <td>@meal.Date.ToShortTimeString()</td>
                        <td>@meal.MealType</td>
                        <td>@meal.TotalCalories</td>
                        <td>@meal.Protein g</td>
                        <td>@meal.Carbs g</td>
                        <td>@meal.Fat g</td>
                        <td>
                            <a asp-action="EditMeal" asp-route-id="@meal.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                            <a asp-action="DeleteMeal" asp-route-id="@meal.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>