@model IEnumerable<FitnessTracker.Models.Workout>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Workouts</h1>
        <a asp-controller="Workouts" asp-action="Create" class="btn btn-primary">
            Log New Workout
        </a>
    </div>

    <!-- Workout Categories -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Strength Training</h5>
                    <p class="card-text">Build muscle and increase strength with our curated strength workouts.</p>
                    <a asp-controller="Workouts" asp-action="ByCategory" asp-route-category="Strength" class="btn btn-outline-primary">View Workouts</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Cardio</h5>
                    <p class="card-text">Improve your endurance and burn calories with cardio workouts.</p>
                    <a asp-controller="Workouts" asp-action="ByCategory" asp-route-category="Cardio" class="btn btn-outline-primary">View Workouts</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Flexibility</h5>
                    <p class="card-text">Enhance your flexibility and mobility with stretching routines.</p>
                    <a asp-controller="Workouts" asp-action="ByCategory" asp-route-category="Flexibility" class="btn btn-outline-primary">View Workouts</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Workouts -->
    <h2 class="mb-4">Recent Workouts</h2>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>Date</th>
                    <th>Workout Type</th>
                    <th>Duration</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var workout in Model)
                {
                    <tr>
                        <td>@workout.Date.ToShortDateString()</td>
                        <td>@workout.Type</td>
                        <td>@workout.Duration minutes</td>
                        <td>
                            <a asp-controller="Workouts" asp-action="Details" asp-route-id="@workout.Id" class="btn btn-sm btn-outline-primary">View</a>
                            <a asp-controller="Workouts" asp-action="Edit" asp-route-id="@workout.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                            <a asp-controller="Workouts" asp-action="Delete" asp-route-id="@workout.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>