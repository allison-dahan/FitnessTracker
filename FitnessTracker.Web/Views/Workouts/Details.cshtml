@{
    var workout = ViewData["Workout"] as Workout;
    if (workout == null)
    {
        <div class="alert alert-danger">Workout found.</div>
        return;
    }
}
@using FitnessTracker.Models;

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["PageTitle"]</h1>
        <div>
            <a asp-controller="Workouts" asp-action="Edit" asp-route-id="@workout.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-controller="Workouts" asp-action="Delete" asp-route-id="@workout.Id" class="btn btn-danger ms-2">
                <i class="bi bi-trash"></i> Delete
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-light">
            <h4 class="mb-0">Workout Details</h4>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="mb-3">
                        <h5 class="text-muted">Type</h5>
                        <p class="fs-5">@workout.Type</p>
                    </div>
                    
                    <div class="mb-3">
                        <h5 class="text-muted">Duration</h5>
                        <p class="fs-5">@workout.Duration minutes</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <h5 class="text-muted">Date</h5>
                        <p class="fs-5">@workout.Date.ToLongDateString()</p>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(workout.Notes))
                    {
                        <div class="mb-3">
                            <h5 class="text-muted">Notes</h5>
                            <p>@workout.Notes</p>
                        </div>
                    }
                </div>
            </div>
            
            <h5 class="text-muted mb-3">Exercises</h5>
            
            @if (workout.WorkoutExercises != null && workout.WorkoutExercises.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Exercise</th>
                                <th>Sets</th>
                                <th>Reps</th>
                                <th>Weight (lbs)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var workoutExercise in workout.WorkoutExercises)
                            {
                                <tr>
                                    <td>@workoutExercise.Exercise.Name</td>
                                    <td>@workoutExercise.Sets</td>
                                    <td>@workoutExercise.Reps</td>
                                    <td>@workoutExercise.Weight</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">No exercises recorded for this workout.</p>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Workouts" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Workouts
            </a>
        </div>
    </div>
</div>
