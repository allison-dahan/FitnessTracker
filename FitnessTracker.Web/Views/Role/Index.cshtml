<!-- Index.cshtml -->
@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Roles";
}

<h2>All Roles</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Create New Role</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Role ID</th>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>




