<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fitness Tracker</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <style>
        /* Failsafe to hide any rogue Profile links */
        a[href*="Profile"], a[href*="profile"], .nav-link:contains("Profile") {
            display: none !important;
        }
    </style>
</head>
<body>
    @if (ViewData["IsVirtualDomRequest"] as bool? != true)
    {
        <!-- Full page layout - only render for non-VDOM requests -->
        <header>
            <nav class="navbar navbar-expand-lg fixed-top">
                <div class="container">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">FitTrack</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">

                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Workouts" ? "active" : "")" asp-controller="Workouts" asp-action="Index">Workouts</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Nutrition" ? "active" : "")" asp-controller="Nutrition" asp-action="Index">Nutrition</a>
                            </li>

                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                @if (User.IsInRole("Admin"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Role" asp-action="Index">Manage Roles</a>
                                    </li>
                                }

                                <li class="nav-item">
                                    <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="nav-link btn btn-link" style="cursor: pointer;">Logout</button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Register</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                                </li>
                            }
                        </ul>
                </div>
            </nav>
        </header>
    }
    
    <div class="container py-4">
        <main role="main" id="app">
            @RenderBody()
        </main>
    </div>
    
    @if (ViewData["IsVirtualDomRequest"] as bool? != true)
    {
        <!-- Only include footer for non-VDOM requests -->
        <footer class="text-center py-3 mt-5">
            <div class="container">
                <p class="mb-0">&copy; 2025 FitTrack. All rights reserved.</p>
            </div>
        </footer>

        <!-- Scripts - only load for full page requests -->
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        

    }
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>